	journal = {Circulation Research},
	author = {Orlowski, Alejandro and Di Mattia, Romina Alejandra and Aiello, Ernesto Alejandro},
	month = jun,
	year = {2025},
	note = {Publisher: American Heart Association},
	pages = {1636--1656},
}

@article{faber_action_2000,
	title = {Action potential and contractility changes in [{Na}(+)](i) overloaded cardiac myocytes: a simulation study},
